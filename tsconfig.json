{
  "compilerOptions": {
    "baseUrl": "./",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "src/*"
      ], // ตั้ง alias @ สำหรับ src
      "@config/*": [
        "config/*"
      ], // Alias สำหรับโฟลเดอร์ config นอก src
      "@utils/*": [
        "src/utils/*"
      ], // Alias สำหรับ utils ภายใน src
      "@types/*": [
        "src/types/*"
      ], // Alias สำหรับ types ภายใน types
      "@styles/*": [
        "src/styles/*"
      ], // Alias สำหรับ styles ภายใน styles
      "@components/*": [
        "src/components/*"
      ], // Alias สำหรับ components ภายใน components
      "@hooks/*": [
        "src/hooks/*"
      ], // Alias สำหรับ hooks ��ายใน hooks
      "@api/*": [
        "src/app/api/*"
      ], // Alias
      "@services/*": [
        "src/services/*"
      ], // Alias
      "@stores/*": [
        "src/stores/*"
      ], // Alias
      "@locales/*": [
        "src/locales/*"
      ] // Alias
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "config/next-i18next.config.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
